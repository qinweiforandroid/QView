<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/key_line_2">

    <ImageView
        android:id="@+id/mAppIconImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mAppNameLabel"
        style="@style/TextAppearance.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/key_line_2"
        android:layout_marginRight="@dimen/key_line_2"
        android:lines="1"
        app:layout_constraintEnd_toStartOf="@+id/mAppUninstallBtn"
        app:layout_constraintStart_toEndOf="@id/mAppIconImg"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/mAppPackageNameLabel"
        style="@style/TextAppearance.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/key_line_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mAppUninstallBtn"
        app:layout_constraintStart_toStartOf="@id/mAppNameLabel"
        app:layout_constraintTop_toBottomOf="@id/mAppNameLabel" />


    <Button
        android:id="@+id/mAppUninstallBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卸载"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>